<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/pageBackground">

    <!--will use variables to set each of these text views with customer data-->

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/newJoinRequestHeader"
        android:text="New Join Request"
        android:textColor="@color/white"
        android:textSize="35dp"
        android:layout_margin="50dp"
        android:textAlignment="center"
        android:textStyle="bold"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/joiningCustomerName"
        android:textColor="@color/white"
        android:layout_below="@id/newJoinRequestHeader"
        android:layout_margin="10dp"
        android:textSize="20dp"
        android:textStyle="italic"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/joiningCustomerRating"
        android:textColor="@color/white"
        android:layout_below="@id/joiningCustomerName"
        android:layout_margin="10dp"
        android:textSize="20dp"
        android:textStyle="italic"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/newJoinPickup"
        android:textColor="@color/white"
        android:layout_below="@id/joiningCustomerRating"
        android:layout_margin="10dp"
        android:textSize="20dp"
        android:textStyle="italic"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/distanceAway"
        android:textColor="@color/white"
        android:layout_below="@id/newJoinPickup"
        android:layout_margin="10dp"
        android:textSize="20dp"
        android:textStyle="italic"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/increasedTripTime"
        android:layout_below="@id/distanceAway"
        android:textColor="@color/white"
        android:layout_margin="10dp"
        android:textSize="20dp"
        android:textStyle="italic"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/fareChange"
        android:textColor="@color/white"
        android:layout_below="@id/increasedTripTime"
        android:layout_margin="10dp"
        android:textSize="20dp"
        android:textStyle="italic" />

    <LinearLayout
        android:id="@+id/acceptDenyBtnLayout"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_below="@id/fareChange"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/denyJoinRequestBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:height="100dp"
            android:layout_toLeftOf="@id/acceptJoinRequestBtn"
            android:backgroundTint="#576CBC"
            android:layout_marginHorizontal="20dp"
            android:text="DENY" />


        <com.google.android.material.button.MaterialButton
            android:id="@+id/acceptJoinRequestBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:height="100dp"
            android:backgroundTint="@color/buttonBackground"
            android:layout_marginHorizontal="20dp"
            android:text="ACCEPT"/>
    </LinearLayout>

</RelativeLayout>